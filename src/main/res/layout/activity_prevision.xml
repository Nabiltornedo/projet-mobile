<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/txtBudgetTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Budget Total"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDepensesTotales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dépenses Totales"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/txtReste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reste"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginTop="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#CCCCCC" />

        <TextView
            android:id="@+id/textViewProgression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Progression du budget..."
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textViewCharges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charges à venir..."
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/textViewPrevisions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prévisions des dépenses..."
            android:textSize="16sp"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>
